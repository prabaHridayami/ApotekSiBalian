<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineActivity.EditMedicineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/med_add_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:text="Name"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:background="@drawable/et_shape"
            android:hint="Input medicine name here ..."/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:text="Price"/>

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:background="@drawable/et_shape"
            android:hint="Input price here ..."/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:text="Type"/>

        <Spinner
            android:id="@+id/s_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:background="@drawable/spinner" />

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:text="Service"/>

        <Spinner
            android:id="@+id/s_service"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:background="@drawable/spinner" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:text="Description"/>

        <EditText
            android:id="@+id/et_etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_shape"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="left|top"
            android:padding="8dp"
            android:hint="Input description here..."/>

        <Button
            android:id="@+id/btn_edit_med"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/card_profil"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_edit"
            android:textColor="@color/white"
            android:text="Edit Medicine"
            android:textSize="12sp"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>