<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineActivity.AddMedicineActivity">

    <LinearLayout
        android:id="@+id/hearder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/actionbar1"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:backgroundTint="@color/colorPrimary"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/back_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/ic_arrow"
                android:elevation="1dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hearder">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/med_add_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:background="@color/black"/>

            <Button
                android:id="@+id/btn_add_medimage"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/card_profil"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_image"
                android:textColor="@color/black"
                android:text="Pilih Gambar"
                android:textSize="12sp"
                android:elevation="5dp"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:text="Nama Obat"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:background="@drawable/et_shape"
                android:elevation="5dp"
                android:padding="10dp"
                android:hint="Masukan nama obat ..."/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:text="Harga"/>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:background="@drawable/et_shape"
                android:elevation="5dp"
                android:padding="10dp"
                android:hint="Masukan harga ..."/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:text="Tipe Obat"/>

            <Spinner
                android:id="@+id/s_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:background="@drawable/spinner" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:text="Kategori Obat"/>

            <Spinner
                android:id="@+id/s_kategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:background="@drawable/spinner" />

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:text="Stok"/>

            <EditText
                android:id="@+id/et_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:background="@drawable/et_shape"
                android:elevation="5dp"
                android:padding="10dp"
                android:hint="Masukan stok obat ..."/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:text="Deskripsi"/>

            <EditText
                android:id="@+id/etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_shape"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:lines="4"
                android:gravity="left|top"
                android:padding="10dp"
                android:elevation="5dp"
                android:hint="Masukan deskripsi..."/>

            <Button
                android:id="@+id/btn_add_med"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/card_profil"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_edit"
                android:textColor="@color/white"
                android:text="Add Medicine"
                android:textSize="12sp"
                android:elevation="5dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>/

</RelativeLayout>